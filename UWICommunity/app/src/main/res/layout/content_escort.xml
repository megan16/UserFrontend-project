<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.megan.uwicommunity.EscortActivity"
    tools:showIn="@layout/activity_escort"
    android:background="#FFFAFA"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escortInstr"
            android:id="@+id/textView"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:typeface="serif"
            android:padding="5dp"
            android:lineSpacingExtra="3.5dp"
            android:layout_gravity="center_horizontal|top"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push to Start "
            android:id="@+id/alarmButton"
            android:width="150dp"
            android:height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="20dp"
            android:textAlignment="center"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:onClick="setTimer"
            android:translationZ="0dp" />

        <!-- Panic Button -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/panicBtn"
            android:id="@+id/panic"
            android:width="80dp"
            android:height="25dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|center_horizontal"
            android:background="@drawable/abort_button"
            android:translationZ="0dp"
            android:textAllCaps="true"
            android:typeface="serif"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:onClick="panicFunction"
            android:visibility="invisible"/>

        <!--android:visibility="invisible"-->
        <!-- Abort Button-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abortBtn"
            android:id="@+id/abort"
            android:width="80dp"
            android:height="25dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|center_horizontal"
            android:background="@drawable/abort_button"
            android:onClick="abortFunction"
            android:translationZ="0dp"
            android:textAllCaps="true"
            android:typeface="serif"
            android:textSize="15dp"
            android:padding="5dp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:visibility="invisible"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wlkbddyBtn"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/round_edges_button"
            android:padding="10dp"
            android:onClick="startWalkBud"
            android:textStyle="bold|italic"/>


    </FrameLayout>
</LinearLayout>
