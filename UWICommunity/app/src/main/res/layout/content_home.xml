<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.megan.uwicommunity.HomeActivity"
    tools:showIn="@layout/activity_home"
    android:background="#FFFFFF"

    >
    <!--android:background="#212121"-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        android:gravity="center|top"
        >


        <!--image layout buttons go here -->

        <TableRow
            android:layout_height="125dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="80dp"
            >

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:id="@+id/imageButtonSafety"
                android:src="@drawable/safety"
                android:onClick="navToSafety"
                android:contentDescription="@string/imagebutton1desc"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"/>

            <ImageButton
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/imageButtonEvents"
                android:src="@drawable/events"
                android:background="#FFFFFF"
                />

        </TableRow>


        <!-- 2nd table row layout of image buttons -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:gravity="center_horizontal"
            android:paddingTop="125dp"

            >

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:id="@+id/imageButtonTrades"
                android:background="#FFFFFF"
                android:src="@drawable/trade"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/activities"
                android:background="#FFFFFF"
                android:src="@drawable/activities"/>

        </TableRow>


    </TableLayout>

</LinearLayout>
